<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_scrollview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <EditText
            android:id="@+id/main_search_field"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_field_height"
            android:layout_margin="@dimen/search_field_margin"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_search_button"
            android:layout_width="@dimen/search_btn_width"
            android:layout_height="@dimen/search_btn_height"
            android:layout_gravity="center"
            android:text="@string/search_button_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recycler_last_header"
            android:layout_margin="@dimen/main_parts_spacing"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recycler_new_header"
            android:layout_margin="@dimen/main_parts_spacing"
            android:layout_marginTop="@dimen/main_parts_spacing"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_recycler_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recycler_top_header"
            android:layout_margin="@dimen/main_parts_spacing"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_recycler_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>